{
  "name": "redrhino",
  "private": true,
  "scripts": {
    "start": "meteor --settings dev-settings.json"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "env": {
      "meteor": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ]
    },
    "globals": {
      "FlowRouter": false
    }
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "flatpickr": "^2.2.3",
    "meteor-node-stubs": "~0.2.0",
    "payment": "^2.1.4"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.3.0",
    "autoprefixer": "^6.3.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
